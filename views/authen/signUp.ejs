<% include ../includes/head.ejs %>

    <h3 id="head2">Signup page</h3>
    <%if(errorMsg){%>
        <span style="text-align: center; color:tomato; margin-left: 400px;">
            <%=errorMsg.msg %>
        </span>
        <%}%>
    <form action="/signup" method="POST" id="me">
        <span>
            <p>email:</p>
            <input type="text" name="email" value="<%=oldInput.email%>">
        </span><br>
        <span>
            <p>Password</p>
            <input type="password" name="password" value="<%=oldInput.password%>">
        </span><br>
        <span>
            <p>confirm Password</p>
            <input type="password" name="Cpassword" value="<%=oldInput.Cpassword%>">
                </span><br>
        <span><input type="submit" value="signup"> 
        </span>
        <input type="hidden" name="_csrf" value="<%=csrfToken%>">
    </form>
    <% include ../includes/end.ejs %>